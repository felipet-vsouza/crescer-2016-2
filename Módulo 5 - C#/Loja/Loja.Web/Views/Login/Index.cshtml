
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

@using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h2 style="color: crimson;">@TempData["MensagemAutenticacao"]</h2>

    @Html.TextBox("email", "", new { placeholder = "email" })
    @Html.Password("senha", "", new { placeholder = "senha" })

    <button type="submit">Entrar</button>
}
