<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="crescer" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:app/jdbc/crescer</jta-data-source>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Ator</class>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Classificacao</class>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Elenco</class>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Filme</class>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Genero</class>
    <class>br.com.cwi.crescer.exerc.aula5.entity.Idioma</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
